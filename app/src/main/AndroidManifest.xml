<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.rachit.recyclerview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SimpleRecyclerViewActivity"
            android:label="@string/title_activity_simple_recycler_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.ComplexRecyclerViewActivity"
            android:label="@string/title_activity_complex_recycler_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rachit.recyclerview.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.HorizontalRecyclerViewActivity"
            android:label="@string/title_activity_horizontal_recycler_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rachit.recyclerview.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.GridRecyclerViewActivity"
            android:label="@string/title_activity_grid_recycler_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rachit.recyclerview.activity.MainActivity"/>
        </activity>
    </application>

</manifest>